<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="@drawable/deadlift"
    tools:context="com.example.andrewseto.workoutbuddy2.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:text="Wilks Score"
            android:onClick="goToWilks"
            android:layout_gravity="right"
            android:backgroundTint="@android:color/holo_red_light"
            />

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:text="1-REP MAX"
            android:layout_gravity="left"
            android:onClick="goToCalc"
            android:backgroundTint="@android:color/holo_red_light"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Break Timer"
            android:onClick="goToBreakTimer"
            android:backgroundTint="@android:color/holo_red_light"
            />

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Plate Calc"
            android:onClick="goToWorkout"
            android:backgroundTint="@android:color/holo_red_light"
            />
    </LinearLayout>



</LinearLayout>